<div class= "container">
  <div class="row mt-5">
    <div class="col-md-3">
      <p class="text-left h4">calendar_room</p>
      <% @calendars.each do |calendar|%>
        <%= link_to calendar.name %><br>
      <% end %>
      <%= render partial: 'calendar_form', locals:{calendar: @calendar} %>
    </div>
    <div class="col-md-9">
      <%= month_calendar(events: @blogs) do |date, blogs| %>
        <%= date.day %>
        <% blogs.each do |blog| %>
          <div><%= link_to blog.title,diary_blog_path(blog) %></div>
        <% end %>
      <% end %>
    </div>
  <%= render partial: 'diary_form', locals:{blog: @blog} %>
  </div>
</div>
