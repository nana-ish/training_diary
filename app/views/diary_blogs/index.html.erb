<div class= "container">
  <div class="mt-5">
    <div class ="col-md-12 mx-auto d-block">
      <%= form_with(model: @blog, local: true) do |f| %>
        <%= f.text_field :title ,class: "form_control" %>
        <%= f.text_field :content ,class: "form_control"%>
        <%= f.datetime_select :start_time ,class: "form_control"%>
        <%= f.submit "登録する", class: "btn btn-secondary btn-block btn-sm" %>
      <% end %>
      <%= month_calendar events: @blogs do |date, blogs| %>
        <%= date.day %>
        <% blogs.each do |blog| %>
          <%= link_to blog.title, blog %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
