
<!-- Modalページへのリンク --><!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  日記を投稿する
</button>

<!-- 日記の投稿Modalページ -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= form_with model: blog, url:diary_blogs_path, local: true do |f| %>
        <%= f.date_field :start_time ,class: "form_control my-2"%><br>
        <%= f.text_field :title ,class: "form_control my-2" ,placeholder: "タイトル"%>
        <%= f.text_area :content ,autocomplete: "introduction",:size =>"30x10",class: "form_control my-2",placeholder: "詳細" %><br>
        <%= f.submit "登録する" ,class: "btn btn-primary" %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <% end %>
    </div>
  </div>
</div>
</div>