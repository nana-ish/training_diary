
<!-- Modalページへのリンク --><!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  新しいカレンダーを作成する
</button>


<!-- 日記の投稿Modalページ -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">新しいカレンダーを作成する</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= form_with model: calendar ,url:calendars_path, local:true do |f| %>
        <%= f.text_field :name ,class: "form_control my-2" ,placeholder: "新しいカレンダー名" %><br>
        <%= f.label :color ,"テーマカラー" %><br>
        <%= f.select :color,["●red","●blue","●green","●orange","●grey"]%>
        <br><%= f.submit '新しいカレンダーを作成する',class:"btn btn-success"%>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <% end %>
    </div>
  </div>
</div>
</div>